<fieldset>
  <dl>
    <dd><%= f.label :code %></dd>
    <dd><%= f.text_field :code %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :description %></dd>
    <dd><%= f.text_field :description, :maxlength => 15 %></dd>
  </dl>
  
  <dl>
    <dd><strong>Applicable to:</strong></dd>
  </dl>
  
  <dl>
    <dd class="applicable_to"><%= f.label :applicable_to_rm, "RM:" %></dd>

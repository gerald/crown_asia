<h1>New Role</h1>

<%= render :partial => "shared/error_messages", :locals => {:target => @role} %>

<%= form_for @role do |f| %>
  <%= render :partial => "form", :locals =>{:f => f} %>
  
  <p class="buttons">
    <%= submit_tag "Save" %>
    <%= button_to_function "Reset", "$('#new_role')[0].reset()" %>
    <%= button_to_function "Cancel", "window.location.replace('#{roles_path}')" %>
  </p>
<% end %>
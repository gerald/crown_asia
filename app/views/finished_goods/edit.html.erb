<h1>Update <%= @finished_good.name %></h1>

<%= render :partial => "shared/error_messages", :locals => {:target => @finished_good} %>

<%= form_for @finished_good do |f| %>
  <%= render :partial => "form", :locals =>{:f => f} %>
  
  <p class="buttons">
    <%= submit_tag "Save" %>
    <%= button_to_function "Reset", "$(this).closest('form')[0].reset()" %>
    <%= button_to_function "Cancel", "window.location.replace('#{finished_goods_path}')" %>
  </p>
<% end %>
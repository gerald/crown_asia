<fieldset>
  <dl>
    <dd><%= f.label :name %></dd>
    <dd><%= f.text_field :name %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :description %></dd>
    <dd><%= f.text_area :description %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :unit_of_measure %></dd>
    <dd><%= f.select :unit_of_measure_id, UnitOfMeasure.all(:order => "code").collect{|u| [u.name, u.id]}, {:include_blank => true} %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :customer %></dd>
    <dd><%= f.select :customer_id, Customer.active_customers.collect{|c| [c.name, c.id]}, {:include_blank => true} %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :local %></dd>
    <dd><%= f.check_box :local %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :comments %></dd>
    <dd><%= f.text_area :comments %></dd>
  </dl>
</fieldset>
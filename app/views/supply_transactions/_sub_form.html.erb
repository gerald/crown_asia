<fieldset>
  <dl>
    <dd><%= f.label :mirs_number, "MIRS Number" %></dd>
    <dd><%= f.text_field :mirs_number %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :transaction_date %></dd>
    <dd><%= f.text_field :transaction_date %></dd>
  </dl>
  
  <br class="clear"/>
  
  <dl>
    <dd><%= f.label :issued_department, "Issued To Department" %></dd>
    <dd><%= f.select :issued_department_id, Department.all.collect{|d| [d.name, d.id]}, {:include_blank => true} %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :issued_user, "Issued To User" %></dd>
    <dd><%= f.select :issued_user_id, Department.all.collect{|d| [d.name, d.id]}, {:include_blank => true} %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :usage %></dd>
    <dd><%= f.text_field :usage %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :quantity %></dd>
    <dd><%= f.text_field :quantity %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :lot_number %></dd>
    <dd><%= f.text_field :lot_number %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :comments %></dd>
    <dd><%= f.text_area :comments %></dd>
  </dl>
</fieldset>
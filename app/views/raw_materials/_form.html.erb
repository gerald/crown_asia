<fieldset>
  <dl>
    <dd><%= f.label :raw_material_type %></dd>
    <dd><%= f.select :raw_material_type_id, RawMaterialType.all(:order => "code").collect{|r| [r.name, r.id]}, {:include_blank => true} %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :code %></dd>
    <dd><%= f.text_field :code %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :name %></dd>
    <dd><%= f.text_field :name %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :description %></dd>
    <dd><%= f.text_area :description %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :unit_of_measure %></dd>
    <dd><%= f.select :unit_of_measure_id, UnitOfMeasure.all(:order => "code").collect{|u| [u.name, u.id]}, {:include_blank => true} %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :critical_quantity %></dd>
    <dd><%= f.text_field :critical_quantity %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :local %></dd>
    <dd><%= f.check_box :local %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :supplier %></dd>
    <dd><%= f.select :supplier_id, Supplier.active_suppliers.collect{|s| [s.name, s.id]}, {:include_blank => true} %></dd>
  </dl>
  
  <dl>
    <dd><%= f.label :comments %></dd>
    <dd><%= f.text_area :comments %></dd>
  </dl>
</fieldset>
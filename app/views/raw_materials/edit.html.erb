<h1>Update <%= @raw_material.name %></h1>

<%= render :partial => "shared/error_messages", :locals => {:target => @raw_material} %>

<%= form_for @raw_material do |f| %>
  <%= render :partial => "form", :locals =>{:f => f} %>
  
  <p class="buttons">
    <%= submit_tag "Save" %>
    <%= button_to_function "Reset", "$(this).closest('form')[0].reset()" %>
    <%= button_to_function "Cancel", "window.location.replace('#{raw_materials_path}')" %>
  </p>
<% end %>
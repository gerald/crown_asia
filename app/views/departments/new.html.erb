<h1>New Department</h1>

<%= render :partial => "shared/error_messages", :locals => {:target => @department} %>

<%= form_for @department do |f| %>
  <%= render :partial => "form", :locals =>{:f => f} %>
  
  <p class="buttons">
    <%= submit_tag "Save" %>
    <%= button_to_function "Reset", "$('#new_department')[0].reset()" %>
    <%= button_to_function "Cancel", "window.location.replace('#{departments_path}')" %>
  </p>
<% end %>
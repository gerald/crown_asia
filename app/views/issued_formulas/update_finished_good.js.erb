<% if @local %>
  $('#fg_select').html('<%= escape_javascript(select_tag("issued_formula[finished_good_id]", "<option></option>".html_safe + options_from_collection_for_select(FinishedGood.active.all(:conditions => ["local = 1"]), "id", "name", @finished_good_id.blank? ? "" : @finished_good_id), :onchange => "update_formula()")) %>');
<% else %>
  $('#fg_select').html('<%= escape_javascript(select_tag("issued_formula[finished_good_id]", "<option></option>".html_safe + options_from_collection_for_select(FinishedGood.active.all(:conditions => ["local = 0"]), "id", "name", @finished_good_id.blank? ? "" : @finished_good_id), :onchange => "update_formula()")) %>');
<% end %>
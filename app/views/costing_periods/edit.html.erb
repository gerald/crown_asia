<h1>Update Costing Period <%= @costing_period.costing_date.strftime("%Y-%m") %></h1>

<%= render :partial => "shared/error_messages", :locals => {:target => @costing_period} %>

<%= form_for @costing_period do |f| %>
  <%= render :partial => "form", :locals =>{:f => f} %>
  
  <p class="buttons">
    <%= submit_tag "Save" %>
    <%= button_to_function "Reset", "$(this).closest('form')[0].reset()" %>
    <%= button_to_function "Cancel", "window.location.replace('#{costing_periods_path}')" %>
  </p>
<% end %>
<h1>Update <%= @delivery_schedule.control_number %></h1>

<%= render :partial => "shared/error_messages", :locals => {:target => @delivery_schedule} %>

<%= form_for @delivery_schedule do |f| %>
  <%= render :partial => "form", :locals =>{:f => f} %>
  
  <p class="buttons">
    <%= submit_tag "Save" %>
    <%= button_to_function "Reset", "$(this).closest('form')[0].reset()" %>
    <%= button_to_function "Cancel", "window.location.replace('#{delivery_schedules_path}')" %>
  </p>
<% end %>

<script type="text/javascript">
  Date.format = 'yyyy-mm-dd';
  $('#delivery_schedule_delivery_date').datePicker({clickInput:true, startDate:'<%= Date.today.strftime("%Y-%m-%d") %>'});
</script>

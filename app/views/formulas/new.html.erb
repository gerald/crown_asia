<h1>New Formula</h1>

<%= render :partial => "shared/error_messages", :locals => {:target => @formula} %>

<%= form_for @formula do |f| %>
  <%= render :partial => "form", :locals =>{:f => f} %>
  
  <p class="buttons">
    <%= submit_tag "Save" %>
    <%= button_to_function "Reset", "$('#new_formula')[0].reset()" %>
    <%= button_to_function "Cancel", "window.location.replace('#{formulas_path}')" %>
  </p>
<% end %>
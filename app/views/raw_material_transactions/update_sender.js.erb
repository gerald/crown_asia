<% if @reference_type == "TOS" %>
  $('#sender_select').html('<%= escape_javascript(select_tag("raw_material_transaction[sender_id]", options_from_collection_for_select(Department.all, "id", "name", params[:sender_id]))) %>');
  $('#sender_select').append('<%= hidden_field_tag("raw_material_transaction[sender_type]", "Department") %>');
<% else %>
  $('#sender_select').html('<%= escape_javascript(select_tag("raw_material_transaction[sender_id]", options_from_collection_for_select(Supplier.all, "id", "name", params[:sender_id]))) %>');
  $('#sender_select').append('<%= hidden_field_tag("raw_material_transaction[sender_type]", "Supplier") %>');
<% end %>